{
  "openapi": "3.0.0",
  "info": {
    "title": "Container Management API",
    "version": "1.0.0",
    "description": "API completa para gerenciamento de containers, averbações, usuários e seguradoras",
    "contact": {
      "name": "Suporte API",
      "email": "suporte@container.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Usuario": {
        "type": "object",
        "properties": {
          "idUsuario": {
            "type": "integer",
            "description": "ID único do usuário"
          },
          "nomeCompleto": {
            "type": "string",
            "description": "Nome completo do usuário"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email do usuário"
          },
          "cpf": {
            "type": "string",
            "description": "CPF do usuário"
          },
          "telefone": {
            "type": "string",
            "description": "Telefone do usuário"
          },
          "celular": {
            "type": "string",
            "description": "Celular do usuário"
          },
          "status": {
            "type": "string",
            "enum": ["ativo", "inativo", "bloqueado"],
            "description": "Status do usuário"
          },
          "perfil": {
            "$ref": "#/components/schemas/PerfilUsuario"
          }
        }
      },
      "PerfilUsuario": {
        "type": "object",
        "properties": {
          "idPerfil": {
            "type": "integer"
          },
          "nomePerfil": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "nivelAcesso": {
            "type": "integer"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "senha"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email do usuário"
          },
          "senha": {
            "type": "string",
            "description": "Senha do usuário"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "object",
            "properties": {
              "user": {
                "$ref": "#/components/schemas/Usuario"
              },
              "token": {
                "type": "string",
                "description": "JWT token para autenticação"
              }
            }
          }
        }
      },
      "Container": {
        "type": "object",
        "properties": {
          "idContainer": {
            "type": "integer"
          },
          "numeroContainer": {
            "type": "string"
          },
          "tipoContainer": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["disponivel", "em_uso", "manutencao", "fora_servico"]
          },
          "capacidade": {
            "type": "number"
          },
          "peso": {
            "type": "number"
          },
          "dataCriacao": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Cliente": {
        "type": "object",
        "properties": {
          "idCliente": {
            "type": "integer"
          },
          "nomeEmpresa": {
            "type": "string"
          },
          "cnpj": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "telefone": {
            "type": "string"
          },
          "endereco": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["ativo", "inativo"]
          }
        }
      },
      "Seguradora": {
        "type": "object",
        "properties": {
          "idSeguradora": {
            "type": "integer"
          },
          "nomeSeguradora": {
            "type": "string"
          },
          "cnpj": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "telefone": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["ativa", "inativa"]
          }
        }
      },
      "Permissao": {
        "type": "object",
        "properties": {
          "idPermissao": {
            "type": "integer"
          },
          "nomePermissao": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "modulo": {
            "type": "string"
          },
          "acao": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "object"
          }
        }
      }
    }
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Login de usuário",
        "description": "Realiza o login do usuário e retorna um token JWT",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              },
              "example": {
                "email": "admin@container.com",
                "senha": "admin123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/usuarios": {
      "get": {
        "tags": ["Usuários"],
        "summary": "Listar usuários",
        "description": "Retorna lista paginada de usuários",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Número da página",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Itens por página",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Buscar por nome ou email",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de usuários",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Usuario"
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "page": {"type": "integer"},
                        "limit": {"type": "integer"},
                        "total": {"type": "integer"},
                        "pages": {"type": "integer"}
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Token inválido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Usuários"],
        "summary": "Criar usuário",
        "description": "Cria um novo usuário no sistema",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["nomeCompleto", "email", "senha", "idPerfil"],
                "properties": {
                  "nomeCompleto": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "senha": {
                    "type": "string",
                    "minLength": 6
                  },
                  "idPerfil": {
                    "type": "integer"
                  },
                  "cpf": {
                    "type": "string"
                  },
                  "telefone": {
                    "type": "string"
                  },
                  "celular": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/containers": {
      "get": {
        "tags": ["Containers"],
        "summary": "Listar containers",
        "description": "Retorna lista paginada de containers com filtros",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {"type": "integer", "default": 10}
          },
          {
            "name": "numeroContainer",
            "in": "query",
            "description": "Filtrar por número do container",
            "schema": {"type": "string"}
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filtrar por status",
            "schema": {
              "type": "string",
              "enum": ["disponivel", "em_uso", "manutencao", "fora_servico"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de containers",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "data": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Container"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Containers"],
        "summary": "Criar container",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["numeroContainer", "tipoContainer"],
                "properties": {
                  "numeroContainer": {"type": "string"},
                  "tipoContainer": {"type": "string"},
                  "capacidade": {"type": "number"},
                  "peso": {"type": "number"}
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Container criado com sucesso",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SuccessResponse"}
              }
            }
          }
        }
      }
    },
    "/api/clientes": {
      "get": {
        "tags": ["Clientes"],
        "summary": "Listar clientes",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {"type": "integer", "default": 10}
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "data": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Cliente"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/seguradoras": {
      "get": {
        "tags": ["Seguradoras"],
        "summary": "Listar seguradoras",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {"type": "integer", "default": 10}
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de seguradoras",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "data": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Seguradora"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/permissoes": {
      "get": {
        "tags": ["Permissões"],
        "summary": "Listar permissões",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Lista de permissões",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "data": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Permissao"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}